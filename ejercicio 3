       Console.WriteLine(“Modelo B 10% de descuento “); 
       Console.WriteLine(“Modelo C 25% de descuento”); 
       Console.WriteLine(“Modelo D 18% de descuento “); 
       Console.WriteLine(“Modelo E 20% de descuento”); 
   Modelo= char.Parse(Console.ReadLine()); 
 
       If (modelo==’A’ || modelo==’a’ || modelo==’B’ || modelo==’b’ || modelo==’C’ || modelo==’c’ || modelo== ‘D’ || modelo==’d’ || modelo== ‘E’ || modelo==’e’) 
        { 
         Console.WriteLine(“ingresa el precio: “); 
         P=double.Parse(Console.ReadLine()); 
         If (p<0) 
         { 
         Console.WriteLine(“Verificar el precio”); 
         } 
         Else  
         If (p>=1) 
         { 
        Switch (modelo) 
        { 
       Case ‘A’: 
       Case ‘a’: 
       Pcd= p*0.15; 
       T=p-pcd; 
       Break; 
       Case ‘B’: 
       Case ‘b’: 
       Pcd=p*0.10; 
       T=p-pcd; 
       Break; 
       Case ‘C’: 
       Case ‘c’: 
       Pcd=p*0.25; 
       T=p-pcd; 
       Break; 
       Case ‘D’: 
       Case ‘d’: 
       Pcd=p*0.18; 
       T=p-pcd; 
       Break; 
       Case ‘E’: 
       Case ‘e’: 
       Pcd=p*0.20; 
